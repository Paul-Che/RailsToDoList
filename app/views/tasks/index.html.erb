<div class="row text-center">

  <% @tasks.each do |task| %>
    <h2><%= task.name %></h2>
    <p><%= task.content %></p>
    <ul>
      <li><%= link_to "Show", task_path(task) %></li>
      <li><%= link_to "Edit", edit_task_path(task) %></li>
      <li>
        <%= link_to "Delete", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </li>
    </ul>
  <% end %>
  </br>
  <%= link_to "Add a task ?", new_task_path %>
</div>
